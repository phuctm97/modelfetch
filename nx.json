{
  "namedInputs": {
    "default": ["{workspaceRoot}/tsconfig.*.json", "{projectRoot}/**/*"],
    "production": [
      "default",
      "!{projectRoot}/.mcp.json",
      "!{projectRoot}/.cursor",
      "!{projectRoot}/.claude",
      "!{projectRoot}/CLAUDE.md",
      "!{projectRoot}/eslint.config.js"
    ]
  },
  "plugins": [
    { "plugin": "@nx/js/typescript", "options": { "build": {} } },
    "nx-10x"
  ],
  "sync": {
    "globalGenerators": ["@nx/js:typescript-sync", "nx-10x:format-tsconfigs"]
  }
}

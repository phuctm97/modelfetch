{
  "compilerOptions": {
    "customConditions": ["development"],
    "moduleResolution": "bundler",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["es2023"],
    "target": "es2022",
    "allowJs": false,
    "strict": true,
    "incremental": true,
    "composite": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "noEmitOnError": true
  }
}
